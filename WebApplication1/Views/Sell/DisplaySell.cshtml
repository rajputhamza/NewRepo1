@model IEnumerable<WebApplication1.Models.Sell>

@{
    ViewBag.Title = "Display Sell";
}

<h2>DisplaySell</h2>

<p>
    @Html.ActionLink("Create New", "CreateSell", "Sell", new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr class="success">
        <th>
            @Html.DisplayName("Buyer Name")
        </th>
        <th>
            @Html.DisplayName("Buyer Contact")
        </th>
        <th>
            @Html.DisplayName("Blood Group")
        </th>
        <th>
            @Html.DisplayName("Pack count")
        </th>
        <th>
            @Html.DisplayName("Blood Charges")
        </th>
        <th>
            @Html.DisplayName("Date")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Sell_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sell_contact)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sell_group)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sell_count)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sell_fee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sell_date)
            </td>
            <td>
                @Html.ActionLink("Edit", "UpdateSell", "Sell", new { id = item.Id }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Details", "DetailSell", "Sell", new { id = item.Id }, new { @class = "btn btn-success" }) |
                @Html.ActionLink("Delete", "DeleteSell", "Sell", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
