@model WebApplication1.Models.Doner

@{
    ViewBag.Title = "Delete Doner";
}

<h2>Delete Doner</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Doner</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Doner Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Doner_name)
        </dd>

        <dt>
            @Html.DisplayName("Doner Contact")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Doner_contact)
        </dd>

        <dt>
            @Html.DisplayName("Doner Address")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Doner_address)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Cancel", "DisplayDoner", "Doner", new { @class = "btn btn-primary" })
        </div>
    }
</div>
