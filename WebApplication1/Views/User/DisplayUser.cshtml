@model IEnumerable<WebApplication1.Models.user>

@{
    ViewBag.Title = "Display User";
}

<h2>Display User</h2>

<p>
    @Html.ActionLink("Create New", "CreateUser", "User", new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr class="success">
        <th>
            @Html.DisplayName("User Id")
        </th>
        <th>
            @Html.DisplayName("User Name")
        </th>
        <th>
            @Html.DisplayName("User Contact")
        </th>
        <th>
            @Html.DisplayName("User Password")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contact)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.ActionLink("Edit", "UpdateUser", "User", new { id = item.Id }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Details", "DetailUser", "User", new { id = item.Id }, new { @class = "btn btn-success" }) |
                @Html.ActionLink("Delete", "DeleteUser", "User", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
