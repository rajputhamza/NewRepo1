@model WebApplication1.Models.Blood

@{
    ViewBag.Title = "Delete Blood";
}

<h2>Delete Blood</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Blood</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Blood Group")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Blood_group)
        </dd>

        <dt>
            @Html.DisplayName("Blood Quantity")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Blood_quantity)
        </dd>

        <dt>
            @Html.DisplayName("Blood Charges")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Blood_fee)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Cancel", "DisplayBlood", "Blood", new { @class = "btn btn-primary" })
        </div>
    }
</div>
